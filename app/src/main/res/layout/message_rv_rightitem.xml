<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <ImageView
        android:id="@+id/righttextbg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rightbuble"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/righttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="Deneme için yazılmış text"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="normal"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintBottom_toBottomOf="@+id/righttextbg"
        app:layout_constraintEnd_toEndOf="@+id/righttextbg"
        app:layout_constraintStart_toStartOf="@+id/righttextbg"
        app:layout_constraintTop_toTopOf="@+id/righttextbg" />

    <TextView
        android:id="@+id/whoright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ben:"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:textSize="12sp"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintBottom_toTopOf="@+id/righttext"
        app:layout_constraintEnd_toEndOf="@+id/righttext"
        app:layout_constraintStart_toStartOf="@+id/righttext" />




</androidx.constraintlayout.widget.ConstraintLayout>